<main>
  <header>
    <h1><%= @article.title %></h1>
  </header>
  <%= markdown(@article.body) %>
  <footer>
    <p><%= link_to "Edit", edit_article_path(@article) %> &bull;
      <%= link_to "Delete", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %></p>
  </footer>
</main>
